<h1>Ajouter un avis pour <%= @restaurant.name %></h1>

<%= form_with model: @review, url: restaurant_reviews_path(@restaurant), local: true do |f| %>
  <div class="form-group">
    <%= f.label :content, "Commentaire" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating, "Note" %>
    <%= f.select :rating, (0..5).to_a, {}, class: "form-control" %>
  </div>

  <%= f.submit "Ajouter", class: "btn btn-success" %>
<% end %>
